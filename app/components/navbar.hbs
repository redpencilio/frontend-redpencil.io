{{! DESKTOP NAV }}
<nav class='container relative z-10 hidden items-center justify-between py-5 lg:flex' aria-label='desktop navigation'>
  <LinkTo @route='index'>
    {{#if @dark}}
      <img class='h-6 w-auto' src="assets/vector/rpio-logo.svg" alt='redpencil.io' />
   {{else}}
      <img class='h-6 w-auto' src="/assets/vector/rpio-logo-light.svg" alt='redpencil.io' />
    {{/if}}
  </LinkTo>

  <ul class='flex items-center justify-between text-sm font-medium text-zinc-400 hover:text-zinc-200 {{if @dark "text-zinc-900 hover:text-zinc-600"}}'>
    <li class='mx-6'>
      <LinkTo @route='services'>Services</LinkTo>
    </li>
    <li class='mx-6'>
      <LinkTo @route='projects'>Projects</LinkTo>
    </li>
    <li class='mx-6'>
      <LinkTo @route='who-we-are'>Who we are</LinkTo>
    </li>
    <li class='mx-6'>
      <LinkTo @route='careers'>Careers</LinkTo>
    </li>
  </ul>
  <LinkTo
    class='rounded border-2 border-red-500 bg-red-800 px-12 py-2 text-sm font-medium text-white shadow shadow-red-500/10 hover:border-transparent hover:bg-red-600'
    @route='contact'>Contact</LinkTo>
</nav>

{{! MOBILE NAV }}
<nav class='relative z-50 flex w-full flex-col items-start lg:hidden
    ' aria-label='mobile navigation'>
  <div class='flex w-full items-center justify-between p-3'>
    <LinkTo @route='index'>
      {{#if @dark}}
        <img class='h-6 w-auto' src="assets/vector/rpio-logo.svg" alt='redpencil.io' />
      {{else}}
        <img class='h-6 w-auto' src="/assets/vector/rpio-logo-light.svg" alt='redpencil.io' />
      {{/if}}
    </LinkTo>
    <button type='button' class='p-1 {{if @dark "text-zinc-900" "text-zinc-200"}}' {{on 'click' this.toggleMenu}}>
      {{#if this.isOpenMenu}}
        {{svg-jar 'close-line' fill='currentColor'}}
      {{else}}
        {{svg-jar 'menu-line' fill='currentColor'}}
      {{/if}}
    </button>
  </div>

  {{#if this.isOpenMenu}}
    <div class='absolute top-0 w-full'>
      <div class="bg-black/20 h-screen w-screen absolute top-0 left-0" {{on 'click' this.toggleMenu}}></div>
      <div {{body-scroll-lock}} class="relative p-3 z-20 mt-10">
        <ul class='bg-white rounded-lg flex flex-col items-center border-2 border-zinc-700 divide-y divide-gray-100 py-2 px-4 text-zinc-800 text-base font-medium'>
          <li class='flex w-full py-4'>
            <LinkTo class='w-full' @route='index'>Homepage</LinkTo>
          </li>
          <li class='flex w-full py-4'>
            <LinkTo class='w-full' @route='services'>Services</LinkTo>
          </li>
          <li class='flex w-full py-4'>
            <LinkTo class='w-full' @route='projects'>Projects</LinkTo>
          </li>
          <li class='flex w-full py-4'>
            <LinkTo class='w-full' @route='who-we-are'>Who we are</LinkTo>
          </li>
          <li class='flex w-full py-4'>
            <LinkTo class='w-full' @route='careers'>Careers</LinkTo>
          </li>
          <li class='flex w-full py-4'>
            <LinkTo class='w-full' @route='contact'>Contact</LinkTo>
          </li>
        </ul>
      </div>
    </div>
  {{/if}}
</nav>