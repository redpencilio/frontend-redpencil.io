<div
  class="border-b border-zinc-500 bg-gradient-to-r from-gray-200 to-gray-50 pb-24"
>
  <Navbar />
  <PageHeader @title="Careers" @text="Work with our #WebWeWant" />
</div>

<section
  class="container -mt-32 mb-16 grid grid-cols-1 justify-between gap-5 md:-mt-20 md:mb-32 lg:grid-cols-2"
>
  <CareerCard
    @isLink={{true}}
    @linkTo="careers.full-stack-developer"
    @title="Full Stack Web Developer"
    @status="Open"
    @contract="Full-time"
    @remoteOrLocal="Remote"
    @location="Belgium (preferably)"
  />

  <CareerCard
    @isLink={{true}}
    @linkTo="careers.internship"
    @title="Internship"
    @status="Open"
    @contract="Temporary"
    @remoteOrLocal="Remote"
    @location="Global"
  />
</section>

<section class="container mb-16 md:mb-48">
  <div class="mb-24 flex flex-col md:mb-36 md:items-center">
    <div class="md:text-center">
      <h2
        class="mb-1 whitespace-nowrap text-xl font-medium text-gray-900 md:text-3xl"
      >Working at redpencil</h2>
      <p class="mb-6 font-light sm:text-lg md:mb-12 md:text-xl">What you can
        expect</p>
    </div>

    <ul
      class="flex h-full flex-col divide-x-0 divide-y divide-gray-300 rounded-md border border-gray-500 bg-gray-100 md:flex-row md:divide-x md:divide-y-0"
    >
      <li
        class="flex flex-row items-center rounded p-6 text-zinc-900 md:w-1/2 md:flex-col md:space-y-4"
      >
        <div
          class="flex h-10 w-10 items-center justify-center rounded text-red-800"
        >
          {{svg-jar "balance" class="w-6"}}
        </div>
        <p class="text-center font-medium">Work-life balance</p>
      </li>
      <li
        class="flex flex-row items-center p-6 text-zinc-900 md:w-1/2 md:flex-col md:space-y-4"
      >
        <div
          class="flex h-10 w-10 items-center justify-center rounded text-red-800"
        >
          {{svg-jar "remote-friendly" class="w-6"}}
        </div>
        <p class="text-center font-medium">Remote friendly</p>
      </li>
      <li
        class="flex flex-row items-center p-6 text-zinc-900 md:w-1/2 md:flex-col md:space-y-4"
      >
        <div
          class="flex h-10 w-10 items-center justify-center rounded text-red-800"
        >
          {{svg-jar "learning-time" class="w-6"}}
        </div>
        <p class="text-center font-medium">20% of your time for learning</p>
      </li>
      <li
        class="flex flex-row items-center rounded p-6 text-zinc-900 md:w-1/2 md:flex-col md:space-y-4"
      >
        <div
          class="flex h-10 w-10 items-center justify-center rounded text-red-800"
        >
          {{svg-jar "technologies" class="w-6"}}
        </div>
        <p class="text-center font-medium">Work with cutting edge technologies</p>
      </li>
    </ul>
  </div>
  <div class="flex-1">
    <div class="mb-6 text-center">
      <h2 class="mb-1 text-xl font-medium text-gray-900 md:text-3xl">Useful
        resources</h2>
      <p class="mb-12 font-light sm:text-lg md:text-xl">Discover the code</p>
    </div>
    <div
      class="mx-auto flex max-w-2xl flex-col divide-y divide-zinc-500 rounded-lg border border-zinc-500 bg-zinc-100"
    >
      <a
        href="https://github.com/redpencilio"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-between rounded-t-lg px-6 py-4 text-gray-800 hover:bg-zinc-200"
      >
        {{svg-jar "github" class="w-6"}}
        <p class="font-medium">Redpencilio</p>
        {{svg-jar "external-link" class="w-5"}}
      </a>
      <a
        href="https://github.com/lblod"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-between px-6 py-4 text-gray-800 hover:bg-zinc-200"
      >
        {{svg-jar "github" class="w-6"}}
        <p class="font-medium">LBLOD</p>
        {{svg-jar "external-link" class="w-5"}}
      </a>
      <a
        href="https://github.com/mu-semtech"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-between rounded-b-lg px-6 py-4 text-gray-800 hover:bg-zinc-200"
      >
        {{svg-jar "github" class="w-6"}}
        <p class="font-medium">Mu-semtech</p>
        {{svg-jar "external-link" class="w-5"}}
      </a>
    </div>
  </div>
</section>