<div class='bg-white'>
  <Navbar @dark='true' />
</div>

<div class='relative bg-white'>
  <div class='relative z-10'>
    <div class='container py-12 lg:py-32'>

      <div class='flex h-full flex-col items-start lg:flex-row lg:space-x-24'>
        <div class='flex flex-1 flex-col items-start pb-12 md:pb-20'>
          <h2
            class='mb-3 whitespace-nowrap text-4xl font-medium text-zinc-900 lg:text-6xl'
          >Contact us</h2>
          <p class='mb-8 w-full text-base text-zinc-800 lg:text-lg'>Want to know
            more about what our solutions can do for your organisation or want
            to help us develop the new world? Send us a message, and we will get
            back to you!</p>

          <ul class='flex items-center space-x-2 text-gray-600'>
            <li>
              <a
                class='block rounded-lg border border-zinc-500 bg-gray-100 p-4 hover:bg-white hover:text-red-600 md:p-6'
                href='mailto:info@redpencil.io'
              >
                {{svg-jar 'email' class='w-6'}}
                <span class='sr-only'>Send us an email</span>
              </a>
            </li>
            <li>
              <a
                class='block rounded-lg border border-zinc-500 bg-gray-100 p-4 hover:bg-white hover:text-blue-400 md:p-6'
                href='https://twitter.com/redpencilio'
                target='_blank'
                rel='noopener noreferrer'
              >
                {{svg-jar 'twitter' class='w-6 '}}
                <span class='sr-only'>Visit our Twitter page</span>
              </a>
            </li>
            <li>
              <a
                class='block rounded-lg border border-zinc-500 bg-gray-100 p-4 hover:bg-white hover:text-blue-600 md:p-6'
                href='https://www.linkedin.com/company/redpencilio/'
                target='_blank'
                rel='noopener noreferrer'
              >
                {{svg-jar 'linkedin' class='w-6'}}
                <span class='sr-only'>Visit our LinkedIn page</span>
              </a>
            </li>

            <li>
              <a
                class='block rounded-lg border border-zinc-500 bg-gray-100 p-4 hover:bg-white hover:text-black md:p-6'
                href='https://github.com/redpencilio'
                target='_blank'
                rel='noopener noreferrer'
              >
                {{svg-jar 'github' class='w-6'}}
                <span class='sr-only'>Visit our Github page</span>
              </a>
            </li>

          </ul>
        </div>

        <form {{on 'submit' this.sendEmail}}>
          <div
            class='flex w-full flex-col space-y-3 rounded-md border-zinc-400 bg-white md:border md:p-8 shadow-2xl shadow-red-700/20'
          >
            <div>
              <label for='name' class='sr-only'>Your name</label>
              <div class='relative mt-1'>
                <div
                  class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'
                >
                  {{svg-jar 'person' class='h-4 w-4 text-gray-600'}}
                </div>
                <Input
                  @type='text'
                  name='name'
                  id='name'
                  @value={{this.name}}
                  class='block w-full rounded-md border border-zinc-500 py-4 pl-10 sm:text-sm'
                  placeholder='name'
                />
              </div>
            </div>
            <div class='flex-1'>
              <label for='email' class='sr-only'> email </label>
              <div class='relative mt-1'>
                <div
                  class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'
                >
                  {{svg-jar 'email-line' class='h-4 w-4 text-gray-600'}}
                </div>
                <Input
                  @type='text'
                  name='email'
                  id='email'
                  @value={{this.email}}
                  class='block w-full rounded-md border border-zinc-500 py-4 pl-10 sm:text-sm'
                  placeholder='you@example.com'
                  required
                />
              </div>
            </div>
            <div class='flex-1'>
              <label for='tel' class='sr-only'> Telephone number </label>
              <div class='relative mt-1'>
                <div
                  class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'
                >
                  {{svg-jar 'phone' class='h-4 w-4 text-gray-600'}}
                </div>
                <Input
                  @type='text'
                  name='tel'
                  id='tel'
                  @value={{this.phone}}
                  class='block w-full rounded-md border border-zinc-500 py-4 pl-10 sm:text-sm'
                  placeholder='+12 345678910'
                />
              </div>
            </div>
            <div>
              <label for='message' class='sr-only'>Message</label>
              <div class='relative mt-1'>
                <Textarea
                  name='message'
                  class='block w-full rounded-md border border-zinc-500 bg-gray-100 p-4 sm:text-sm'
                  placeholder='message'
                  id='message'
                  @value={{this.message}}
                  cols='30'
                  rows='10'
                  required
                />
              </div>
            </div>
            <button
              type='submit'
              class='rounded-md border-2 border-red-500 bg-red-800 py-5 text-sm font-medium text-white shadow shadow-red-500/10 hover:border-transparent hover:bg-red-600'
            >
              Send message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<Footer @borderTop={{true}} />

{{#if this.showNotification}}
  {{#if this.success}}
    <Notification
      @success={{this.success}}
      @title='Message successfully sent!'
      @text='Thank you for your message, we will get back to you as soon as possible'
      @onClose={{this.close}}
    />
  {{else}}
    <Notification
      @success={{this.success}}
      @title='Something went wrong'
      @text='Please try again later or mail us directly at meettheteam@redpencil.io'
      @onClose={{this.close}}
    />
  {{/if}}
{{/if}}