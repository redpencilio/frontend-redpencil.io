<div class='bg-gradient-to-r from-black to-gray-900'>
  <Navbar />
</div>

<div class='relative bg-gradient-to-t from-black to-gray-900'>
  <div class='relative z-10 border-y border-gray-800'>
    <div class='container py-12 lg:py-32'>

      <div class='flex h-full flex-col items-start lg:flex-row lg:space-x-24'>
        <div class='flex flex-1 flex-col items-start pb-12 md:pb-20'>
          <h2
            class='mb-3 whitespace-nowrap text-4xl font-medium text-white lg:text-6xl'
          >Contact us</h2>
          <p class='mb-8 w-full text-base text-gray-300 lg:text-lg'>Want to know
            more about what our solutions can do for your organisation or want
            to help us develop the new world? Send us a message, and we will get
            back to you!</p>
          <Socials />
        </div>

        <form {{on 'submit' this.sendEmail}}>
          <div
            class='flex w-full flex-col space-y-3 rounded-md bg-white p-8 shadow'
          >
            <div>
              <label for='name' class='sr-only'>Your name</label>
              <div class='relative mt-1'>
                <div
                  class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'
                >
                  {{svg-jar 'person' class='h-4 w-4 text-gray-600'}}
                </div>
                <Input
                  @type='text'
                  name='name'
                  id='name'
                  @value={{this.name}}
                  class='block w-full rounded-md border border-gray-300 py-4 pl-10 sm:text-sm'
                  placeholder='name'
                />
              </div>
            </div>
            <div class='flex-1'>
              <label for='email' class='sr-only'> email </label>
              <div class='relative mt-1'>
                <div
                  class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'
                >
                  {{svg-jar 'email-line' class='h-4 w-4 text-gray-600'}}
                </div>
                <Input
                  @type='text'
                  name='email'
                  id='email'
                  @value={{this.email}}
                  class='block w-full rounded-md border border-gray-300 py-4 pl-10 sm:text-sm'
                  placeholder='you@example.com'
                  required
                />
              </div>
            </div>
            <div class='flex-1'>
              <label for='tel' class='sr-only'> Telephone number </label>
              <div class='relative mt-1'>
                <div
                  class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'
                >
                  {{svg-jar 'phone' class='h-4 w-4 text-gray-600'}}
                </div>
                <Input
                  @type='text'
                  name='tel'
                  id='tel'
                  @value={{this.phone}}
                  class='block w-full rounded-md border border-gray-300 py-4 pl-10 sm:text-sm'
                  placeholder='+12 345678910'
                />
              </div>
            </div>
            <div>
              <label for='message' class='sr-only'>Message</label>
              <div class='relative mt-1'>
                <Textarea
                  name='message'
                  class='block w-full rounded-md border border-gray-300 bg-gray-100 p-4 sm:text-sm'
                  placeholder='message'
                  id='message'
                  @value={{this.message}}
                  cols='30'
                  rows='10'
                  required
                />
              </div>
            </div>
            <button
              type='submit'
              class='flex items-center justify-center space-x-6 rounded-md bg-red-700 py-4 text-sm font-medium text-white hover:bg-red-600'
            >
              Send message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<Footer />

{{#if this.showNotification}}
  {{#if this.success}}
    <Notification
      @success={{this.success}}
      @title='Message successfully sent!'
      @text='Thank you for your message, we will get back to you as soon as possible'
      @onClose={{this.close}}
    />
  {{else}}
    <Notification
      @success={{this.success}}
      @title='Something went wrong'
      @text='Please try again later or mail us directly at meettheteam@redpencil.io'
      @onClose={{this.close}}
    />
  {{/if}}
{{/if}}