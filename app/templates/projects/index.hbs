      <div class="font-normal text-white">These projects do not have their own pages yet </div>
    </div>
  </div>

  <ul class="grid grid-cols-1 lg:grid-cols-2 gap-3 lg:gap-6">
    <ConstructionCard
      @title="ToeVla"
      @text="Toegankelijk Vlaanderen (accessible Flanders) is a website and database containing reliable information about the accessibility of public buildings in Flanders"
      @complete={{false}}
      @illustration="/assets/pixel/toevla-logo.png">
        <a class="text-xs md:text-sm font-medium py-2 md:py-3 px-8 hover:bg-gray-200 bg-white text-gray-900 border border-gray-300 rounded" href="https://inter.vlaanderen/toegankelijk-vlaanderen" target="_blank" rel="noopener noreferrer">Learn more</a>
        <a class="text-xs md:text-sm font-medium py-2 md:py-3 px-8 hover:bg-gray-200 bg-white text-gray-900 border border-gray-300 rounded" href="https://toevla.vlaanderen.be/publiek/nl/register/start" target="_blank" rel="noopener noreferrer">Visit</a>
    </ConstructionCard>

    <ConstructionCard
      @title="Luisterpunt"
      @text="The Flemish library for the visual impaired"
      @complete={{false}}
      @illustration="/assets/vector/logos/luisterpunt.svg">
        <a class="text-xs md:text-sm font-medium py-2 md:py-3 px-8 hover:bg-gray-200 bg-white text-gray-900 border border-gray-300 rounded" href="https://www.luisterpuntbibliotheek.be/nl/english" target="_blank" rel="noopener noreferrer">Learn more</a>
    </ConstructionCard>

    <ConstructionCard
      @title="IPFS-search"
      @text="A decentralized search engine for the Interplanetary Filesystem"
      @complete={{false}}
      @illustration="/assets/vector/logos/ipfs-search.svg">
        <a class="text-xs md:text-sm font-medium py-2 md:py-3 px-8 hover:bg-gray-200 bg-white text-gray-900 border border-gray-300 rounded" href="https://ipfs-search.com/#/search" target="_blank" rel="noopener noreferrer">Visit</a>
        <a class="text-xs md:text-sm font-medium py-2 md:py-3 px-8 hover:bg-gray-200 bg-white text-gray-900 border border-gray-300 rounded" href="https://github.com/ipfs-search/ipfs-search" target="_blank" rel="noopener noreferrer">git repo</a>
