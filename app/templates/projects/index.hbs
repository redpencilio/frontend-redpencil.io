<section class="container mb-12 md:mb-24 lg:mb-32 -mt-48 md:-mt-36">
  <div class="flex justify-between md:border-b border-gray-600 pb-1 mb-4 md:mb-6 flex-col md:flex-row">
    <h2 class="text-lg md:text-2xl font-medium md:border-none mb-4 md:mb-0 text-white">Other projects</h2>
    <div class="md:p-2 text-xs md:text-sm flex space-x-2 items-center text-blue-200">
      <svg class="text-blue-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
        <path fill="none" d="M0 0h24v24H0z" />
        <path
          d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zM11 7h2v2h-2V7zm0 4h2v6h-2v-6z"
          fill="currentColor" />
